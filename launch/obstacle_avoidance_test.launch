<launch>
    <node pkg="rrt_project" type="obstacle_avoidance" name="obstacle_avoidance_test" output="screen">
        <param name="use_angle_filter" value="true"/>
        <param name="angle_filter_margin" value="0.4"/>

        <param name="filter_type" value="1"/>
        <param name="filter_gain" value="0.5"/>

        <param name="robot_height" value="0.3"/>
        <param name="robot_width" value="0.2"/>
        <param name="x_offset" value="-0.1"/>
        <param name="lidar_topic" value="/rplidar/scan"/>
        
        <param name="min_dist_threshold" value="0.7"/>

        <param name="obstacle_avoidance_n" value="2.0"/>
        <param name="obstacle_avoidance_a" value="0.2"/>
        <param name="obstacle_avoidance_b" value="0.2"/>
        <param name="obstacle_avoidance_k" value="5.0"/>
        <param name="potential_gain" value="1.0"/>
        <param name="saturate_potential" value="5.0"/>
    </node>
</launch>